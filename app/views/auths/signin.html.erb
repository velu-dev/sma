<div class="main-section">
  <div class="container">
    <div class="main-section-data">
      <div class="row">
        <div class="col-lg-3 col-md-4 pd-left-none no-pd">
        </div>
        <div class="post-bar no-margin col-lg-6 col-md-8 pd-left-none no-pd">
          <div class="acc-setting">
          <%if flash[:notice].present?%>
          <div class="animated fadeInDown <%=flash[:notice]['class']%>">
            <p id="notice"><%=flash[:notice]['message']%></p>
          </div>
          <%end%>
            <h3 class="align-center">Login</h3>
           <%= form_tag(:action => 'login_auth') do %> 
              <div class="cp-field">
                <h5>Username</h5>
                <div class="cpp-fiel">
                  <input type="text" name="username" placeholder="Email or Mobile Number">
                  <i class="fa fa-user"></i>
                </div>
              </div>
              <div class="cp-field">
                <h5>Password</h5>
                <div class="cpp-fiel">
                  <input type="password" name="password" placeholder="Password">
                  <i class="fa fa-lock"></i>
                </div>
              </div>
              <div class="cp-field">
                <h5><a href="<%=forgot_path%>" title="">Forgot Password?</a></h5>
              </div>
              <div class="save-stngs pd2">
                <ul>
                  <li><button class="active" type="submit">Login</button></li>
                  <li><a class="btn btn-danger" href="<%=signup_path%>">Sign Up</a></li>
                </ul>
              </div>
              <!--save-stngs end-->
            <%end%>
          </div>
        </div>
        <!--acc-setting end-->
      </div>
    </div>
  </div>
</div>