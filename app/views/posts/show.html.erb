<!--post-bar end-->
<h1> show </h1>
<div class="posty post<%=@post.id%>">
    <div class="post-bar no-margin">
        <div class="post_topbar">
            <div class="usy-dt">
                <img style="height: 50px;width: 50px" src="<%= profil_pic(@post.user)%>" alt="">
                <div class="usy-name">
                    <h3><%=@post.user.name.capitalize%></h3>
                </div>
            </div>
            <div class="ed-opts">
                <a href="#" title="" onclick="delPost('<%=@post.id%>')" class="ed-opts-open"><i
                        class="la la-trash"></i></a>
            </div>
        </div>
        <div class="epi-sec">
            <ul class="descp">
                <li><img src="http://gambolthemes.net/workwise_demo/HTML/images/icon9.png"
                        alt=""><span><%=@post.user.user_detail.location%></span></li>
            </ul>
        </div>
        <div class="job_descp">
            <h3><%=@post.user.user_detail.designation%></h3>
            <p><%= @post.content%>
                <!-- <a href="#" title="">view more</a> -->
            </p>
            <div class="media">
                <%if @post.media_type == 'image'%>
                <img class="animated fadeIn media_display" src="<%=@post.media.url%>" alt="your image" />
<%end%>
<%if @post.media_type == 'video'%>
  <video class="animated fadeIn media_display" controls>
    <source src="<%=@post.media.url%>" type="video/mp4">
  </video>
<%end%>
</div>
</div>
<div class="job-status-bar">
  <ul class="like-com">
    <li onclick="openComment('<%=@post.id%>')"><a title="" onclick="openComment()"
                        class="com<%=@post.id%>"><img onclick="openComment()"
                            src="http://gambolthemes.net/workwise_demo/HTML/images/com.png" alt=""> Comment
        <%=@post.comments.count%></a></li>
  </ul>
</div>
</div>
<!--post-bar end-->
<div class="comment-section disabled-comments" id="cmd_sec<%=@post.id%>">
  <%@post.comments.map do |comment|%>
    <%= render comment%>
  <%end%>
  <!--comment-sec end-->
  <%if current_user.present?%>
    <div class="post-comment">
      <div class="cm_img">
        <img style="height: 30px;width: 30px; border-radius: 50%;"
                    src="<%= current_user)%>" alt="">
      </div>
      <div class="comment_box">
        <%#= form_tag({:action => 'create', :controller => "comments"},remote: true) do %>
          <input type="text" name="comment" id="comment<%= post.id%>" placeholder="Post a comment">
          <input type="hidden" name="post_id" value="<%= @post.id%>">
          <button class="btn btn-submit">Comment</button>
        <%#end%>
      </div>
    </div>
  <%else%>
    <div class="post-comment">
      <h2>If you want to comment here please sign in </h2>
    </div>
  <%end%>
  <!--post-comment end-->
</div>
<!--comment-section end-->
</div>
